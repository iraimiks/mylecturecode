
public class OperatorsMath {

	
	public static void main(String[] args) {
		double num1 = 5.4d;
		double num2 = 0.3d;
		double result;
		char add = '+';
		char sub = '-';
		char mult = '*';
		char divi = '/';
		result = num1 + num2;
		result = num1 - num2;
		result = num1 * num2;
		result = num1 / num2;
		System.out.println(num1 + " "+add+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+sub+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+mult+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+divi+" "+num2+" = "+result);
		System.out.println();
		
		

	}

}
